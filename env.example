# ===========================================
# US Pickleball Directory - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Database (Neon PostgreSQL)
# ===========================================
# Get your connection string from https://neon.tech
# IMPORTANT: Create a NEW Neon database for the pickleball directory
DATABASE_URL="postgresql://username:password@ep-xxxxx.us-east-2.aws.neon.tech/dbname?sslmode=require"

# ===========================================
# NextAuth.js Authentication
# ===========================================
# Generate a secret: openssl rand -base64 32
AUTH_SECRET="your-super-secret-auth-key-min-32-chars"

# Your site URL (no trailing slash)
AUTH_URL="http://localhost:3000"

# ===========================================
# Google APIs
# ===========================================
# Get your API keys from https://console.cloud.google.com
# Enable: Places API, Maps JavaScript API, Geocoding API

# Server-side Places API key (keep secret)
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# Client-side Maps API key (can be public, restrict by domain)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# Site Configuration
# ===========================================
# Your production URL (no trailing slash)
NEXT_PUBLIC_SITE_URL="https://pickleballcourts.io"

# Site name displayed in UI and meta tags
NEXT_PUBLIC_SITE_NAME="Pickleball Courts"

# ===========================================
# Email (Gmail SMTP)
# ===========================================
# Gmail address used to send contact form messages
GMAIL_USER="your-gmail-address@gmail.com"
# Gmail app password (not your normal password)
GMAIL_APP_PASSWORD="your-16-char-app-password"
# Destination email for contact form submissions
CONTACT_EMAIL="your-contact-email@example.com"

# ===========================================
# Optional: Google Search Console
# ===========================================
# For sitemap verification
# GOOGLE_SITE_VERIFICATION="your-verification-code"

# ===========================================
# Optional: Analytics
# ===========================================
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ===========================================
# Blog System - Gemini AI
# ===========================================
# Get your API key from https://aistudio.google.com/
GEMINI_API_KEY="your-gemini-api-key"

# ===========================================
# Blog System - Cron Job Security
# ===========================================
# Generate a secret: openssl rand -base64 32
# Used to authenticate cron job requests
CRON_SECRET="your-cron-secret-32-chars"

# ===========================================
# Supabase Storage
# ===========================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY="your-supabase-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
# Bucket name for blog images
SUPABASE_STORAGE_BUCKET="blog-images"
